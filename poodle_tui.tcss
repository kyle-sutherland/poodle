Screen {
  layout: horizontal;
}

Message { 
    box-sizing: content-box;
    }

UserMessage {
    grid-size: 2 1; 
    grid-columns: auto;
    layout: grid;
    box-sizing: content-box;
}

AssistantMessage {
    grid-size: 2 1; 
    grid-columns: auto;
    layout: grid;
    box-sizing: content-box;
}


TextInput {
  offset: 0 -2;
  dock: bottom;
}

